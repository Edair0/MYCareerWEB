@page "/Attributes"
@using MYCareerWEB.Code

@if(AppData.CurrentPlayer != null)
{
    <div class="row row-cols-4 row-cols-sm-2 row-cols-md-4 row-cols-lg-4 row-cols-xl-4 row-cols-xxl-4 g-1">
        <div class="col d-grid">
            <input type="radio" class="btn-check" name="options" id="option1" @onclick="() => ChangeAttributeGroup(1)">
            <label class="btn btn-secondary" for="option1">Offense</label>
        </div>
        <div class="col d-grid">
            <input type="radio" class="btn-check" name="options" id="option2" @onclick="() => ChangeAttributeGroup(2)">
            <label class="btn btn-secondary" for="option2">Defense</label>
        </div>
        <div class="col d-grid">
            <input type="radio" class="btn-check" name="options" id="option3" @onclick="() => ChangeAttributeGroup(3)">
            <label class="btn btn-secondary" for="option3">Athleticism</label>
        </div>
        <div class="col d-grid">
            <input type="radio" class="btn-check" name="options" id="option4" @onclick="() => ChangeAttributeGroup(4)">
            <label class="btn btn-secondary" for="option4">Mental</label>
        </div>
    </div>
    <hr />

    if (SelectedGroup == 1)
    {
        <AttributesGroup AttributeNames="Offense" PlayerAttributeData="AppData.CurrentPlayer.Attributes" ModifierData="AppData.Modifiers.OffenseMults"></AttributesGroup>
    }
    if (SelectedGroup == 2)
    {
        <AttributesGroup AttributeNames="Defense" PlayerAttributeData="AppData.CurrentPlayer.Attributes" ModifierData="AppData.Modifiers.DefenseMults"></AttributesGroup>
    }
    if (SelectedGroup == 3)
    {
        <AttributesGroup AttributeNames="Athleticism" PlayerAttributeData="AppData.CurrentPlayer.Attributes" ModifierData="AppData.Modifiers.AthleticismMults"></AttributesGroup>
    }
    if (SelectedGroup == 4)
    {
        <AttributesGroup AttributeNames="Mental" PlayerAttributeData="AppData.CurrentPlayer.Attributes" ModifierData="AppData.Modifiers.MentalMults"></AttributesGroup>
    }
}


@code {
    private int SelectedGroup = 0;

    private void ChangeAttributeGroup(int GroupID)
    {
        SelectedGroup = GroupID;
    }
}
